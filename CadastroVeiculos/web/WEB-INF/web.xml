<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>excluirCarro</servlet-name>
        <servlet-class>br.cadastroveiculos.controle.excluirCarro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resultBusca</servlet-name>
        <servlet-class>br.cadastroveiculos.controle.resultBusca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resultadoBusca</servlet-name>
        <servlet-class>br.cadastroveiculos.controle.resultadoBusca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>atualizarCarro</servlet-name>
        <servlet-class>br.cadastroveiculos.controle.atualizarCarro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>excluirCarro</servlet-name>
        <url-pattern>/excluirCarro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resultBusca</servlet-name>
        <url-pattern>/resultBusca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resultadoBusca</servlet-name>
        <url-pattern>/resultadoBusca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>atualizarCarro</servlet-name>
        <url-pattern>/atualizarCarro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
